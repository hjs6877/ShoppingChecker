<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soom.shoppingchecker">

    <application
        android:name=".application.ShoppingCheckerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemModifyActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".CartCreateActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".CartDeleteActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".ItemCopyActivity"
            android:theme="@style/Theme.MyDialog" />
    </application>

</manifest>